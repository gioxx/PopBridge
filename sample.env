# -----------------------------
# Shared destination (Gmail SMTP)
# -----------------------------
DST_SMTP_HOST=smtp.gmail.com
DST_SMTP_PORT=587
DST_SMTP_USER=your.account@gmail.com
DST_SMTP_PASS=replace-with-gmail-app-password
DST_SMTP_STARTTLS=true

# -----------------------------
# Runtime behavior
# -----------------------------
DELETE_AFTER_DELIVERY=true
POLL_SECONDS=120

# -----------------------------
# POP3 source profile (used by: compose profile "pop3")
# -----------------------------
SRC_POP3_HOST=pop.provider.tld
SRC_POP3_PORT=995
SRC_POP3_USER=old-mailbox@provider.tld
SRC_POP3_PASS=replace-with-pop3-password
SRC_POP3_SSL=true
SRC_POP3_STARTTLS=false

# -----------------------------
# IMAP source profile (used by: compose profile "imap")
# -----------------------------
SRC_IMAP_HOST=imap.provider.tld
SRC_IMAP_PORT=993
SRC_IMAP_USER=old-mailbox@provider.tld
SRC_IMAP_PASS=replace-with-imap-password
SRC_IMAP_SSL=true
SRC_IMAP_STARTTLS=false
